---
import stack from "../data/techstack.json";
import StackCard from "./StackCard.astro";
---

<div class="bg-base-100 pt-20">
  <div
    class="stack-title mx-auto my-2 justify-self-center text-center text-4xl font-bold"
  >
    My Skills
  </div>
  <div
    class="stack-subtitle text-base-content/30 mx-auto mb-8 justify-self-center text-center text-lg font-bold italic"
  >
    (without vibe coding)
  </div>

  <div class="mx-16 flex flex-wrap justify-center-safe gap-4">
    {stack.data.map((stack) => <StackCard name={stack} />)}
  </div>
</div>
