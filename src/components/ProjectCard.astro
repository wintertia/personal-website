---
import { Image } from "astro:assets";

interface Props {
  title?: string;
  points?: Array<string>;
  stack?: Array<string>;
  link?: string;
  image?: string;
}

const {
  title = "Project",
  points = ["Placeholder 1", "Placeholder 2"],
  stack = ["Stack 1", "Stack 2"],
  link = "https://github.com/wintertia",
  image = "https://placehold.co/600x400",
} = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="">
  <div
    class="card bg-neutral border-base-300 h-full w-100 overflow-hidden rounded-xl border-2 shadow-xl"
  >
    <div class="">
      <Image src={image} width={600} height={400} alt={title} />
    </div>
    <div class="card-body gap-4">
      <h2 class="card-title">
        {title}
      </h2>
      <div class="card-actions justify-start">
        {
          stack.map((stack) => (
            <div class="badge badge-outline badge-secondary">{stack}</div>
          ))
        }
      </div>
      <ul class="list-inside list-disc">
        {points.map((point) => <li>{point}</li>)}
      </ul>
    </div>
  </div>
</a>
