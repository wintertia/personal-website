---
import { Image } from "astro:assets";
import CyberpunkBackground from "../images/backgrounds/cyberpunkcity.jpg";
import Socials from "./Socials.astro";
---

<div class="hero relative h-screen">
  <Image
    src={CyberpunkBackground}
    alt="Cyberpunk city background"
    data-speed="0.5"
    class="inset-0 -z-50 h-full w-full object-cover"
    width={1920}
    height={1080}
    format="webp"
    quality={80}
  />

  <div class="hero-overlay"></div>
  <div class="hero-content text-center" data-speed="0.75">
    <div class="hero-box text-shadow-primary/50 max-w-lg text-shadow-lg">
      <h1 class="hero-title mb-5 text-2xl font-black sm:text-3xl md:text-5xl">
        I'm Amoes Noland.
      </h1>
      <p class="hero-subtitle text-md mb-5 text-balance sm:text-lg md:text-xl">
        Cybersecurity & Binary Exploitation Enthusiast, Entry Level Web/Game
        Developer, IT Student.
      </p>
      <Socials glow={true} />
    </div>
  </div>
</div>
