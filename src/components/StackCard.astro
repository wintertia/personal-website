---
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
}

const { name } = Astro.props;
---

<div class="stack-card">
  <div
    class="bg-base-300 h-32 w-32 rounded-lg p-4 transition duration-300 ease-in-out hover:scale-110"
  >
    <Icon name={`techstack/${name}`} size="100%" />
  </div>
</div>
