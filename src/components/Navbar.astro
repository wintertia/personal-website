---
import { Icon } from "astro-icon/components";
---

<header
  class="navbar from-base-100 fixed top-0 z-50 bg-gradient-to-b to-transparent shadow-sm"
>
  <div class="navbar-start mx-1">
    <a
      href="/"
      class="flex items-center px-2 text-2xl font-bold text-shadow-black/50 text-shadow-lg"
    >
      <Icon name="social/wintertia" size="2rem" />
      <span class="ml-1">Wintertia</span>
    </a>
  </div>
  <div class="navbar-end flex">
    <ul class="menu menu-horizontal hidden md:flex">
      <li><a class="text-shadow-black/50 text-shadow-lg" href="/">About</a></li>
      <li>
        <a class="text-shadow-black/50 text-shadow-lg" href="/projects/"
          >Projects</a
        >
      </li>
      <li>
        <a class="text-shadow-black/50 text-shadow-lg" href="/blog/">Blog</a>
      </li>
    </ul>
    <div class="dropdown dropdown-bottom dropdown-end flex md:hidden">
      <div tabindex="0" role="button" class="btn btn-square btn-ghost">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="inline-block h-5 w-5 stroke-current"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </div>
      <ul
        tabindex="0"
        class="dropdown-content menu bg-base-100 rounded-box z-1 w-52 p-2 shadow-sm"
      >
        <li>
          <a class="text-shadow-black/50 text-shadow-lg" href="/">About</a>
        </li>
        <li>
          <a class="text-shadow-black/50 text-shadow-lg" href="/projects/"
            >Projects</a
          >
        </li>
        <li>
          <a class="text-shadow-black/50 text-shadow-lg" href="/blog/">Blog</a>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  import gsap from "gsap";
  gsap.from(".navbar", {
    duration: 2,
    opacity: 0,
    yPercent: -100,
    ease: "power2.out",
    delay: 0.5,
  });
</script>
