---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const posts: CollectionEntry[] = await getCollection("posts").then(
  (posts: CollectionEntry[]) =>
    posts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()),
);
---

<Layout title="Blog | Wintertia">
  <div class="flex min-h-screen flex-col items-center pt-32">
    <h1 class="mb-4 text-4xl font-bold">Blog</h1>
    <div class="w-full max-w-2xl">
      {
        posts.map((post) => (
          <div class="my-6 rounded-lg border border-[var(--color-border)] p-4 transition duration-300 hover:scale-[1.02] hover:shadow-lg">
            <a href={`/blog/${post.slug}`}>
              <div class="mb-1 text-2xl font-semibold">{post.data.title}</div>
              <p class="line-clamp-2 text-justify text-[var(--color-muted)]">
                {post.data.description}
              </p>
              <p class="text-sm text-[var(--color-muted)]/70">
                Published on {post.data.pubDate.toLocaleDateString("en-US")}
              </p>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
